<%
  // OpenGraph Image Settings - 1200x630 minumum
  // TODO: update OG Image
  page.photos = [config.url + '/custom-truck-van-decals/....jpg'];
%>
<%- partial('partial/navbar') %>
<%
	// Select products with ids containing "ST_TRUCKVAN_"
	const allProducts = site.data.product_list;
	var products = [];
	for (product of allProducts){
		if (product.id.includes("ST_TRUCKVAN_")){
			var clonedProduct = Object.assign({}, product);
			products.push(clonedProduct);
		}
	}
%>
<section>
	<%- partial('partial/navbar') %>
	<div class="jumbotron jumbotron-fluid jumbotron-blueberry-page jumbotron-truck-van pb-0">
		<div class="container">
			<div class="row justify-content-center">
				<h1 class="col-12 col-lg-10 display-4 font-handwritten text-center mt-3 text-white">
					Custom Business Decals for Trucks and Work Vans
				</h1>
				<p class="col-12 col-lg-10 text-center lead pt-4"><strong>We make vinyl stickers for your company trucks and vans.</strong></p>
				<p class="col-12 col-lg-10 text-center mb-5">Add your company name, phone number, business email or US DOT, MC numbers on your fleet vehicles.</p>
			</div>
		</div>
		<img width="2404" height="487" class="img-truck-van" alt="We offer vinyl stickers and decals for work vans, delivery trucks and other commercial vehicles" src="jumbotron-decals-for-truck-van.svg">
	</div>
	<form autocomplete="off" class="js--truck-van-form spacer-footer" name="truckvan" method="POST" data-netlify="true" action="/form-error-banners/index.html">
	<!-- autocomplete="off" because of Firefox radio buttons bug -->
	<!-- https://stackoverflow.com/questions/7988729/firefox-remembering-radio-buttons-incorrectly -->

		<div class="container pt-4">
			<div class="row">
				<div class="col-12 col-sm-6 col-xl-5 col-xl-5 text-center">
					<div class="icon-xxl mt-sm-1 mb-lg-2"><%- partial('icons/icon-design-sketch.svg') %></div>
					<p class="mb-3">
						Select from <strong>variety of font styles</strong>, <strong>colors</strong>, and <strong></strong>specify the wording for your truck or van stickers</strong> below.
					</p>
				</div>
				<div class="col-12 col-sm-6 col-xl-5 offset-xl-1 text-center">
					<div class="icon-xxl mt-sm-1 mb-lg-2"><%- partial('icons/icon-truck-shipping.svg') %></div>
					<p class="mb-3 mb-lg-0">
						Decals are made from <strong>premium outdoor adhesive vinyls</strong>. We manufacture stickers within 1-3 business days.
					</p>
				</div>
			</div>

			<!-- 01. TITLE -->

			<h2 class="text-center mt-4 mb-3 numbered" data-number="1.">Design the Heading</h2>
			<p class="text-muted text-center mb-4">
				"Heading" is the first line of text on the decal. Heading font and color can be unique - different from the rest of the text.
			</p>

			<div class="row justify-content-center">
				<div class="col-12 col-md-6">
					<label class="label-blueberry" for="inputHeading">Type your Heading</label>
					<div class="input-group mb-2">
						<input id="inputHeading" class="form-control js--text-input" type="text" placeholder="Business name or services" title="Please enter your business name or services you offer">
					</div>
				</div>
				<div class="col-12 col-md-6">
					<label class="label-blueberry" for="inputHeadingFont">Heading Font</label>
					<div class="input-group mb-3">
						<select id="inputHeadingFont" class="custom-select custom-select-blueberry js--init-select-with-image">
							<% for (const font of site.data.fonts_heading){ %>
								<option data-bg-image="font-previews/<%- font.id %>.png" value="<%- font.id %>"><%- font.name %></option>
							<% } %>
						</select>
					</div>
					<label class="label-blueberry" for="inputHeadingColor">Heading Color</label>
					<div class="input-group mb-3">
						<select id="inputHeadingColor" class="custom-select custom-select-blueberry">
							<option value="black" >⬛️ Black</option>
							<option value="red" selected>🟥 Red</option> <!-- TODO: remove selected -->
							<option value="orange">🟧 Orange</option>
							<option value="yellow">🟨 Yellow</option>
							<option value="green" >🟩 Green</option>
							<option value="blue"  >🟦 Blue</option>
							<option value="purple">🟪 Purple</option>
						</select>
					</div>
				</div>
			</div>

			<!-- 02. CONTENT -->

			<h2 class="text-center mt-4 mb-3 numbered" data-number="2.">Add Content</h2>
			<p class="text-muted text-center mb-4">
				"Content" is whatever you use under the heading - your company slogan, contact details, DOT or MC numbers.
			</p>

			<div class="row justify-content-center">
				<div class="col-12 col-md-6">
					<label class="label-blueberry" for="inputContent">Input Content</label>
					<div class="input-group mb-2">
						<textarea class="form-control js--init-autosize" id="inputContent" rows="3" placeholder="Use as many lines as you need" title="Please enter your business information - slogan, phone, email"></textarea>
					</div>
				</div>
				<div class="col-12 col-md-6">
					<label class="label-blueberry" for="inputContentFont">Content Font</label>
					<div class="input-group mb-3">
						<select id="inputContentFont" class="custom-select custom-select-blueberry js--init-select-with-image">
							<% for (const font of site.data.fonts_content){ %>
								<option data-bg-image="font-previews/<%- font.id %>.png" value="<%- font.id %>"><%- font.name %></option>
							<% } %>
						</select>
					</div>
					<label class="label-blueberry" for="inputContentColor">Content Color</label>
					<div class="input-group mb-3">
						<select id="inputContentColor" class="custom-select custom-select-blueberry">
							<option value="black" >⬛️ Black</option>
							<option value="white" >⬜️ White</option>
							<option value="red"   >🟥 Red</option>
							<option value="orange">🟧 Orange</option>
							<option value="yellow">🟨 Yellow</option>
							<option value="green" >🟩 Green</option>
							<option value="blue"  >🟦 Blue</option>
							<option value="purple">🟪 Purple</option>
						</select>
					</div>
				</div>
			</div>

			<!-- 02. PREVIEW -->

			<h2 class="text-center mt-4 mb-3 numbered" data-number="3.">Preview Your Design</h2>
			<p class="text-muted text-center mb-4">
				Here decal is displayed on `grey` background. Actual sticker background is transparent - you will see your vehicle color.
			</p>
		</div>
		<div style="overflow-x: hidden">
			<div class="container pt-4">
				<div class="row justify-content-center">
					<div class="col-11 col-md-10 col-lg-8 mb-5">
						<div id="preview-truck-van">
							<div id="truck-van-preview-heading">
								<img width="919" height="197" class="w-100 h-auto" src="default-heading.png" />
							</div>
							<div id="truck-van-preview-content">
								<img width="1566" height="298" class="w-100 h-auto" src="default-content.png" />
							</div>
							<div class="ruler-x"><span>28 in</span></div>
							<div class="ruler-y"><span>16 in</span></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- 04. DECAL SIZE -->

		<div class="container">
			<h2 class="text-center mt-4 mb-3 numbered" data-number="4.">Adjust Decal Size</h2>
			<p class="text-muted text-center mb-4">
				Please input the decal length. Height is calculated automatically depending on the number of lines and fonts used.
			</p>

			<div class="row justify-content-end justify-content-sm-center">
				<div class="col-6 col-sm-4 col-md-4 col-lg-3">
					<label class="label-blueberry" for="inputLength">Decal length, in</label>
					<div class="input-group js--init-integer-input">
						<div class="input-group-prepend">
							<button class="btn btn-outline-primary btn-blueberry js--decrease" type="button" id="button-addon1"><span class="input-group-button-text">&nbsp;−</span></button>
						</div>
						<input name="inputLength" type="number" class="px-0 form-control js--input text-center hide-arrows" id="inputLength" value="38" min="6" max="999">
						<div class="input-group-append">
							<button class="btn btn-outline-primary btn-blueberry js--increase" type="button" id="button-addon2"><span class="input-group-button-text">+&nbsp;</span></button>
						</div>
					</div>
				</div>
				<div class="col-2 col-sm-1 col col-md-1 col-lg-1 text-center">
					<div class="match-input-height pt-3 mb-4">
						<span class="d-inline-block font-size-28 text-muted">×</span>
					</div>
				</div>
				<div class="col-4 col-sm-3 col-md-2 col-md-2">
					<label class="label-blueberry" for="inputLength">height, in</label>
					<input readonly name="inputHeight" type="number" class="form-control js--input text-center hide-arrows" id="inputHeight" value="16">
				</div>
				<div class="col-2 col-sm-1 col-md-1 col-lg-1 text-center">
					<div class="match-input-height pt-3">
						<span class="d-inline-block font-size-28 text-muted">=</span>
					</div>
				</div>
				<div class="col-4 col-sm-3 col-md-3 col-lg-2">
					<label class="label-blueberry" for="inputLength">Area, sq. ft.</label>
					<input readonly name="inputHeight" type="number" class="form-control js--input text-center hide-arrows" id="inputHeight" value="3.7">
				</div>
			</div>
		</div>

		<!-- 04. CART -->

		<div class="container">
			<h2 class="text-center mt-4 mb-3 numbered" data-number="5.">Add Items to Cart</h2>
			<p class="text-muted text-center mb-2">
				Decals are priced each. Please add 2 items to your cart to decorate both sides of the vehicle.
			</p>

			<div class="row justify-content-center">
				<div class="col col-lg-9 col-xl-9">
					<select name="inputSize" id="inputSize" class="js--init-select-reflect">
						<option value="s"  data-price="39.99">S • &lt;2 sq ft</option>
						<option value="m"  data-price="59.99" selected>M • 2-4 sq ft</option>
						<option value="l"  data-price="99.99">L • 4-8 sq ft</option>
						<option value="xl" data-price="149.99">XL • 8+ sq ft</option>
					</select>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col col-md-6 mt-4">
					<div class="form-group text-center">
						<label class="label-blueberry" for="inputQuantity">How many items you need?</label>
						<div class="input-group js--init-integer-input">
							<div class="input-group-prepend">
								<button class="btn btn-outline-primary btn-blueberry js--decrease" type="button" id="button-addon1"><span class="input-group-button-text">&nbsp;−</span></button>
							</div>
							<input name="quantity" type="number" class="form-control js--input text-center hide-arrows" id="inputQuantity" value="2" min="1" max="999">
							<div class="input-group-append">
								<button class="btn btn-outline-primary btn-blueberry js--increase" type="button" id="button-addon2"><span class="input-group-button-text">+&nbsp;</span></button>
							</div>
						</div>
						<div class="alert alert-success mt-3 text-center animate__delay-1s" role="alert" data-aos="animate__tada">
							<small>We offer <strong>10% off</strong> for 2+,  <strong>15% off</strong> for 4+ and <strong>20% off</strong> for 10+ same items in your cart!</small>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</section>