<%
  // OpenGraph Image Settings - 1200x630 minumum
  // TODO: update OG Image
  page.photos = [config.url + '/custom-truck-van-decals/....jpg'];
%>
<%- partial('partial/navbar') %>
<%
	// Select products with ids containing "ST_TRUCKVAN_"
	const allProducts = site.data.product_list;
	var products = [];
	for (product of allProducts){
		if (product.id.includes("ST_TRUCKVAN_")){
			var clonedProduct = Object.assign({}, product);
			products.push(clonedProduct);
		}
	}
%>
<section>
	<%- partial('partial/navbar') %>
	<div class="jumbotron jumbotron-fluid jumbotron-blueberry-page jumbotron-truck-van pb-0">
		<div class="container">
			<div class="row justify-content-center">
				<h1 class="col-12 col-lg-10 display-4 font-handwritten text-center mt-3 text-white">
					Custom Business Decals for Trucks and Work Vans
				</h1>
				<p class="col-12 col-lg-10 text-center lead pt-4 mb-4"><strong>We make vinyl stickers for your company trucks, vans and fleet of corporate vehicles.</strong></p>
			</div>
		</div>
		<img width="4809" height="975" class="img-truck-van" alt="We offer vinyl stickers and decals for work vans, delivery trucks and other commercial vehicles" src="jumbotron-decals-for-truck-van.png">
	</div>
	<div class="container spacer-footer pt-4">
		<div class="row">
			<div class="col-12 col-sm-6 col-xl-5 col-xl-5 text-center">
				<div class="icon-xxl mt-sm-1 mb-lg-2"><%- partial('icons/icon-design-sketch.svg') %></div>
				<p class="mb-3">
					Select your <strong>font styles</strong>, <strong>colors</strong>, and specify the <strong>decal wording</strong> below. Start with your company name. Add phone number, business email or US DOT, MC numbers for trucks.
				</p>
			</div>
			<div class="col-12 col-sm-6 col-xl-5 offset-xl-1 text-center">
				<div class="icon-xxl mt-sm-1 mb-lg-2"><%- partial('icons/icon-truck-shipping.svg') %></div>
				<p class="mb-3 mb-lg-0">
					Decals are made from <strong>premium outdoor adhesive vinyls</strong>. We manufacture and ship the stickers within 1-3 business days.
				</p>
			</div>
		</div>

		<p class="text-center mb-3">

		</p>

		<h2 class="text-center mt-4 mb-3">Design the Heading</h2>
		<div class="row justify-content-center">
			<div class="col col-md-8">
				<div class="input-group mb-2">
					<input class="form-control form-control-lg js--text-input" type="text" name="text" required placeholder="Type your text here" title="Please type your banner text here">
				</div>
			</div>
		</div>

	</div>
</section>