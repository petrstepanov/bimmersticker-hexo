<main class="orientation-container">
  <% if(config.cart == "snipcart"){ %>   
    <%- partial('partial/item-sidebar') %>
  <% } else if (config.cart == "paypal") { %>
    <%- partial('partial/item-sidebar-paypal') %>
  <% } else { %>
    <%- partial('partial/item-sidebar-old') %>
  <% } %>
  <div id="post-content" class="spacer-footer">
    <div class="container">
      <div class="row">
        <div class="col">
          <section>
            <% var productIndex = _.findIndex(site.data.product_list, {'id': post.product_id}); %>
            <% if (productIndex >= 0){ %>
              <% var product = Object.assign({}, site.data.product_list[productIndex]); %>              
              <div class="post-featured-container">
                <!-- Featured gallery -->                
                <% if (product.additional_image_link) { %>
                  <% var data = {
                        images: (product.image_link + "," + product.additional_image_link).split(","),
                        alt: product.description
                  }; %>
                  <%- carousel(data); %>
                <% } else { %>
                  <!-- Featured image -->
                  <img class="w-100" src="<%- product.image_link %>" title="<%- product.title %>" alt="<%- product.description %>" />
                <% } %>
              </div>
            <% } %>
            <%- page.more %>
          </section>
          <%- partial('partial/item-customize') %>
          <%- partial('partial/item-similar') %>
          <%- // partial('partial/item-comments') %>
        </div>
      </div>
    </div>
  </div>
</main>