<div class="container">
  <div class="row justify-content-center js--posts-filter-container">
    <% var sortOrder = (typeof sortBy !== 'undefined') ? sortBy : 'date'; %>
    <% // can be 'date', 'title' %>
    <% site.categories.findOne({name: categoryName}).posts.sort(sortOrder, 1).each(function(post, i){ %>
      <% if (!post.no_display || (post.no_display && post.no_display == false)){ %>
        <%- partial('partial/card', { post: post }) %>
      <% } %>
    <% }) %>
  </div>
</div>
