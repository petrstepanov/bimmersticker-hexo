<div class="modal fade js--init-form-inside-dialog" id="customizeModal" tabindex="-1" role="dialog" aria-labelledby="customizeModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-blueberry" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title font-size-28" id="customizeModalLabel">Any questions? We are here to help!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<!-- Begin Custom Request Form -->
      <form name="<%- typeof post!=='undefined'?post.path:page.path %>" data-netlify="true" data-success-event="formSuccessEvent" class="js--init-ajax-submit" method="POST" data-success-notification="Thanks for submitting your question. We will email you back soon!">
      <!--
        <form class="js--init-ajax-submit" data-success-event="formSuccessEvent" action="<%- theme.formcarry_url %>" method="POST" accept-charset="UTF-8" data-success-notification="Thanks for submitting the request. We will email you back soon!">
      -->
        <div class="modal-body">
          <label for="input-page" class="d-none">Source page</label>
          <input type="hidden" name="page" value="<%- typeof post!=='undefined'?post.title:page.title %>" id="input-page" />
          <div class="form-group">
            <label class="label-blueberry" for="input-email">Your name</label>
            <input type="email" name="name" class="form-control" id="input-name">
          </div>
          <div class="form-group">
            <label class="label-blueberry" for="input-email">Your email</label>
            <input type="email" required name="email" class="form-control" id="input-email">
            <small class="form-text text-muted">We will never share your email with anyone.</small>
          </div>
          <div class="form-group">
            <label class="label-blueberry" for="input-message">Your question</label>
            <textarea required name="message" class="form-control js--init-autosize" rows="2" id="input-message" placeholder=""></textarea>
            <p class="form-text text-muted mt-2">
              <small>Looking for a custom design or color? Please type your questions above and we will get back to you via email ASAP.</small>
            </p>
          </div>
        </div>
				<div class="modal-footer">
					<button type="button" class="btn btn-blueberry btn-outline-primary" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-blueberry btn-primary">Send message</button>
				</div>
      </form>
		</div>
	</div>
</div>