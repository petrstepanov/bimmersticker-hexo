<div id="carousel_{{ id }}" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for image in images %}
      <li data-target="#carousel_{{ id }}" data-slide-to="{{ loop.index0 }}" {{ 'class="active"' if loop.index0==0 else "" }}></li>
    {% endfor %}  
  </ol>
  <div class="carousel-inner">
    {% for image in images %}
      <div class="carousel-item {{ 'active' if loop.index0==0 else "" }}">
          <img width="320" height="320" src="{{ image }}" class="d-block w-100" alt="{{ alt }}">
      </div>
    {% endfor %}  
  </div>
  <a class="carousel-control-prev" href="#carousel_{{ id }}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel_{{ id }}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>