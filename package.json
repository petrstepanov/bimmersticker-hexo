{
  "name": "hexo-site",
  "version": "1.0.0",
  "private": true,
  "hexo": {
    "version": "6.3.0"
  },
  "scripts": {
    "ejslint": "find ./themes/blueberry/layout -type f -iname '*.ejs' -exec bash -c \"./node_modules/.bin/ejslint '{}'\" \\;",
    "optimize": "find . \\( -name \"*jpg\" -o -name \"*png\" \\)  -exec optimizt {} +",
    "avif": "optimizt --avif source && optimizt --avif themes"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "hexo": "^6.3.0",
    "hexo-featured-image": "^0.4.3",
    "hexo-filter-responsive-images": "^1.8.0",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-list-related-posts": "^0.3.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^6.3.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "image-size": "^1.1.1",
    "parse-path": "^7.0.0",
    "stream-to-array": "^2.3.0"
  }
}
